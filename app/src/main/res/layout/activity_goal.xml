<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="40dp"
    tools:context=".Level">

    <LinearLayout
        android:id="@+id/backskipbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="51dp">

        <ImageView
            android:id="@+id/iv_backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="skip"
            android:textAlignment="textEnd"
            android:textColor="#191919"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/favouritecate"
        android:layout_width="409dp"
        android:layout_height="104dp"
        android:layout_below="@+id/backskipbar"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="65dp">

        <TextView
            android:id="@+id/tv_hellothere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_medium"
            android:text="Step 6 of 6"
            android:textColor="#3A4750"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebasneue_regular"
            android:text="What's your goal?"
            android:textColor="#000000"
            android:textSize="30dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weightlossinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favouritecate"
        android:layout_marginTop="50dp"
        android:background="@drawable/vector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_weightloss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:src="@drawable/weightloss" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/gainmusclelinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightlossinput"
        android:layout_marginTop="29dp"
        android:background="@drawable/vector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gainmuscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:src="@drawable/gainmuscle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/improvefitnessinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gainmusclelinput"
        android:layout_marginTop="30dp"
        android:background="@drawable/vector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_improvefitness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:src="@drawable/improvefitness" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loginfields"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/improvefitnessinput"
        android:orientation="vertical"
        android:layout_marginTop="210dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#B0C929"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/white"
            android:text="SKIP"
            android:textSize="18dp"
            android:textStyle="bold"


            />
    </LinearLayout>

</RelativeLayout>